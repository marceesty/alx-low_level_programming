# school

.PHONY = all clean
CC = gcc                        # compiler to use

school = -lm

SRCS := $(wildcard *.c)
BINS := $(SRCS:%.c=%)

all: ${BINS}

%.c %:
        @echo "Checking.."
        ${CC} ${SRC} $< -c $@

%: %.o
        @echo "Checking.."
        ${CC} ${OBJ} $< -o $@

%.o: %.c
        @echo "Creating object.."
        ${CC} -c $<

clean:
        @echo "Cleaning up..."
        rm -rvf *.o ${BINS}

